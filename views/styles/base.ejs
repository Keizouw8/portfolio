<style>
    :root{
        --white: #E3D8BB;
        --black: #231C11;
        --yellow: #E8BE41;
        --red: #911C2D;
        --blue: #2A64B4;
        --w: 0;
        --h: 0;
    }

    body{
        -ms-overflow-style: none;
        scrollbar-width: none;
        background: var(--white);
        color: var(--black);
        overflow-x: hidden;
    }

    ::-webkit-scrollbar {
       display: none;
    }

    h1{
        color: var(--black);
        font-family: dunbar-eb;
        font-size: 6vh;
    }

    h2{
        color: var(--black);
        font-family: joschmi;
        font-size: 6vh;
    }

    #landing{
        --x: sqrt(pow(var(--w), 2) + pow(0.92 * var(--h), 2));
        --y: sqrt(pow(var(--x), 2) - pow(0.08 * var(--h), 2));
        --t: calc(asin(var(--y) / var(--x)) - asin(var(--w) / var(--x)));
    }

    .strip{
        position: absolute;
        height: 8vh;
        transform-origin: 0% 0%;
    }

    .strip#horizontal{
        top: 0;
        left: 0;
        background: var(--white);
        width: 100vw;
    }

    .strip#horizontal h2{
        position: absolute;
        top: 57%;
        right: 2vh;
        transform: translateY(-50%);
        margin: 0;
    }

    .strip#vertical{
        top: 0;
        left: calc(5vw + 32.6vh);
        background: var(--white);
        transform: rotate(90deg);
        width: 100vh;
    }

    .strip#diagonal{
        background: var(--white);
        top: 8vh;
        left: 0;
        width: calc(1px * var(--y));
        transform: rotate(var(--t));
    }

    .strip#diagonal h1{
        position: absolute;
        top: 47%;
        right: 5vh;
        transform: translateY(-50%);
        margin: 0;
    }

    #landing #gray{
        position: absolute;
        margin: 0;
        padding: 0;
        top: 0;
        left: 0;
        height: 100vh;
        width: calc(5vw + 25vh);
        background: var(--black);
    }

    #landing #blue{
        position: absolute;
        margin: 0;
        padding: 0;
        top: 0;
        right: 0;
        height: 100vh;
        width: calc(95vw - 31vh);
        background: var(--blue);
    }

    #landing #red{
        position: absolute;
        margin: 0;
        padding: 0;
        top: 8vh;
        left: 0;
        width: 0;
        height: 0;
        border-bottom: calc(tan(var(--t)) * (1px + 100vw)) solid transparent;
        border-right: 100vw solid var(--red);
    }

    #landing #yellow{
        position: absolute;
        margin: 0;
        padding: 0;
        top: 8vh;
        left: 0;
        width: 0;
        height: 0;
        border-bottom: calc(1.01px * tan(var(--t)) * (0.05 * var(--w) + 0.246 * var(--h))) solid transparent;
        border-right: calc(5vw + 24.6vh + 1px) solid var(--yellow);
    }

    #coding{
        position: absolute;
        color: var(--white);
        bottom: calc(2vw + 4.2vh);
        left: 2.5vw;
        margin: 0;
        padding: 0;
    }

    #philosophy{
        position: absolute;
        color: var(--red);
        bottom: 2vw;
        left: 2.5vw;
        margin: 0;
        padding: 0;
    }
</style>