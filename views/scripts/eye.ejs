<script>
    var randomTimeout = false;
    
    document.addEventListener("mousemove", function(e){
        clearTimeout(randomTimeout);
        randomTimeout = setTimeout(randomPosition, 3000);

        var dx = window.innerWidth / 2;
        dx = (e.clientX - dx) / dx;
        var dy = window.innerHeight / 2;
        dy = (e.clientY - dy) / dy;

        document.querySelector("#iris").setAttribute("transform", `translate(${2 * dx}, ${2 * dy})`);
        document.querySelector("#pupil").setAttribute("transform", `translate(${3 * dx}, ${3 * dy})`);
    });

    function randomPosition(){
        randomTimeout = setTimeout(randomPosition, Math.random() * 3000 + 1500);

        var dx = Math.random() * 2 - 1;
        var dy = Math.random() * 2 - 1;

        document.querySelector("#iris").setAttribute("transform", `translate(${2 * dx}, ${2 * dy})`);
        document.querySelector("#pupil").setAttribute("transform", `translate(${3 * dx}, ${3 * dy})`);
    }

    randomPosition();
</script>